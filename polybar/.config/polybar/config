[colors]
; Define System colors from .Xresources
bg=${xrdb:color0:#ffffff}
c1=${xrdb:color1:#ffffff}
c2=${xrdb:color2:#ffffff}
c3=${xrdb:color3:#ffffff}
c4=${xrdb:color4:#ffffff}
c5=${xrdb:color5:#ffffff}
c6=${xrdb:color6:#ffffff}
fg=${xrdb:color7:#ffffff}

; Define colors for each module
cpubg=${self.bg}
winbg=${self.fg}
netbg=${self.c3}
volbg=${self.c3}
batbg=${self.fg}
malbg=${self.fg}
datbg=${self.c3}
membg=${self.bg}
tempbg=${self.bg}
fsbg=${self.bg}

cpufg=${self.fg}
winfg=${self.bg}
netfg=${self.bg}
volfg=${self.c3}
batfg=${self.bg}
malfg=${self.bg}
datfg=${self.bg}
memfg=${self.fg}
tempfg=${self.fg}
fsfg=${self.fg}

;--------------------------------------------
; bars                                      ;
;--------------------------------------------
[bar/base]
width=100%
height=14
foreground=${colors.fg}
background=${colors.bg}
border-top-size=3
border-top-color= ${colors.bg}
border-bottom-size=3
border-bottom-color= ${colors.bg}
bottom=True
padding-left=1
padding-right=0
module-margin-left=0
module-margin-right=0
font-0=Noto Mono:size=9;2
font-1=FontAwesome:pixelsize=10;2

[bar/litel]
inherit=bar/base
tray-position= right
tray-padding = 3
monitor=HDMI-0
modules-left= date padding network padding xwindow
modules-center= i3
modules-right=memory padding cpu padding temp padding pulse padding spotify padding

[bar/litec]
inherit=bar/base
monitor=HDMI-1
modules-left= date padding network padding
modules-center= i3
modules-right=pulse padding

[bar/liter]
inherit=bar/base
monitor=DVI-D-0
modules-left= date padding network padding xwindow
modules-center= i3
modules-right=Afilesystem padding pulse padding spotify padding

;--------------------------------------------
; modules                                   ;
;--------------------------------------------
[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify
interval = 2
label-foreground = ${colors.bg}
label-background = ${colors.c3}
label-padding=1
click-left = zsh -c "playerctl play-pause"
click-middle = zsh -c "playerctl previous"
click-right = zsh -c "playerctl next"

[module/i3]
type = internal/i3
pin-workspaces = true
format = <label-state>
label-focused = %icon%
label-focused-foreground = ${colors.bg}
label-focused-background =  ${colors.c3}
label-focused-padding = 1
label-unfocused = %icon%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.fg}
label-unfocused-background = ${colors.bg}
label-visible = %icon%
label-visible-padding = 1
label-visible-foreground = ${colors.bg}
label-visible-background = ${colors.fg}
label-separator = |
label-separator-padding = 2
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;

[module/xwindow]
type=internal/xwindow
label=%title:0:80:...%
label-foreground=${colors.winbg}
label-background=${colors.winfg}

[module/temp]
type = internal/temperature
interval = 1
format = <ramp><label>
label = %temperature%
label-background = ${colors.tempbg}
label-foreground = ${colors.tempfg}
label-padding = 1
format-warn = <ramp><label-warn>
label-warn = %temperature%
label-warn-foreground = ${colors.tempfg}
label-warn-background = ${colors.c1}
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.tempfg}

[module/date]
type=internal/date
interval=1.0
date=%a, %b %d
time=%I:%M %p
label=%date% %time%
format=<label>
format-padding=0
label-background=${colors.datbg}
label-foreground=${colors.datfg}
label-padding= 1

[module/pulse]
type = internal/pulseaudio
sink = alsa_output.usb-Binary_Audio_UAC1_DAC-01.analog-stereo
format-volume =<label-volume> <ramp-volume>
format-muted =<label-muted>
label-volume=%percentage%
label-volume-foreground = ${colors.volfg}
label-muted=muted
label-muted-foreground = ${colors.volfg}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/cpu]
type=internal/cpu
interval=0.5
format=<label>
label= %percentage%%
label-background=${colors.cpubg}
label-foreground=${colors.cpufg}
label-padding-right=1

[module/memory]
type = internal/memory
interval = 3
label-background=${colors.membg}
label-foreground=${colors.memfg}
format = <label>
label =  %gb_used%
label-padding = 1

[module/network]
type=internal/network
interface=enp4s0
interval=3.0
format-connected=<label-connected>
label-connected= %local_ip%
label-connected-background=${colors.netfg}
label-connected-foreground=${colors.netbg}
format-disconnected=<label-disconnected>
label-disconnected-background=${colors.netfg}
label-disconnected-foreground=${colors.c1}
label-disconnected-padding=1
label-disconnected=

[module/filesystem]
type = internal/fs
mount-0 = /
mount-1 = /nfs/Media
interval = 10
format-mounted = <label-mounted>
label-mounted =  %mountpoint%: %free%
label-mounted-foreground = ${colors.fsfg}
label-mounted-background = ${colors.fsbg}
label-unmounted =  %mountpoint%: 

[module/padding]
type=custom/text
content=|
content-foreground=${colors.bg}
content-background=${colors.bg}
; vim:ft=dosini