[colors]
; Define System colors from .Xresources
bg=${xrdb:color0:#ffffff}
c1=${xrdb:color1:#ffffff}
c2=${xrdb:color2:#ffffff}
c3=${xrdb:color3:#ffffff}
c4=${xrdb:color4:#ffffff}
c5=${xrdb:color5:#ffffff}
c6=${xrdb:color6:#ffffff}
fg=${xrdb:color7:#ffffff}

; Define colors for each module
cpubg=${self.bg}
winbg=${self.fg}
netbg=${self.c3}
volbg=${self.c3}
batbg=${self.fg}
malbg=${self.fg}
datbg=${self.c3}
membg=${self.bg}
tempbg=${self.bg}
fsbg=${self.bg}

cpufg=${self.fg}
winfg=${self.bg}
netfg=${self.bg}
volfg=${self.c3}
batfg=${self.bg}
malfg=${self.bg}
datfg=${self.bg}
memfg=${self.fg}
tempfg=${self.fg}
fsfg=${self.fg}

;--------------------------------------------
; bars                                      ;
;--------------------------------------------
[bar/base]
width=100%
height=14
foreground=${colors.fg}
background=${colors.bg}
border-top-size=3
border-top-color=${colors.bg}
border-bottom-size=3
border-bottom-color=${colors.bg}
bottom=True
padding-left=1
padding-right=0
module-margin-left=0
module-margin-right=0
font-0=Noto Mono:size=9;2
font-1=FontAwesome:pixelsize=10;3

[bar/litel]
inherit=bar/base
monitor=DP-1
modules-right=date padding
modules-center=i3
modules-left=

[bar/liter]
inherit=bar/base
monitor=DP-3
modules-right=
modules-center=i3
modules-left=date padding

[bar/litec]
inherit=bar/base
tray-position=left
tray-padding=3
monitor=HDMI-0
modules-left=cpu padding memory padding temp padding
modules-center=i3
modules-right=pulse padding network padding

;--------------------------------------------
; modules                                   ;
;--------------------------------------------
[module/spotify]
type =custom/script
exec =~/.config/polybar/spotify
interval =2
label-foreground =${colors.bg}
label-background =${colors.c3}
label-padding=1
click-left =zsh -c "playerctl play-pause"
click-middle =zsh -c "playerctl previous"
click-right =zsh -c "playerctl next"

[module/mpd]
type =internal/mpd
host =127.0.0.1
port =6600
; Available tags:
;   <label-song> (default)
;   <label-time>
;   <bar-progress>
;   <toggle> - gets replaced with <icon-(pause|play)>
;   <toggle-stop> - gets replaced with <icon-(stop|play)>
;   <icon-random>
;   <icon-repeat>
;   <icon-repeatone>
;   <icon-consume>
;   <icon-prev>
;   <icon-stop>
;   <icon-play>
;   <icon-pause>
;   <icon-next>
;   <icon-seekb>
;   <icon-seekf>
format-online =<label-time> <label-song> <icon-prev> <icon-stop> <toggle> <icon-next> 
;format-playing =${self.format-online}
;format-paused =${self.format-online}
;format-stopped =${self.format-online}

; Available tags:
;   <label-offline>
;format-offline =<label-offline>

; Available tokens:
;   %artist%
;   %album%
;   %date%
;   %title%
; Default: %artist% - %title%
label-song =ÔÄÅ %artist% - %title%

; Available tokens:
;   %elapsed%
;   %total%
; Default: %elapsed% / %total%
;label-time =%elapsed% / %total%

; Available tokens:
;   None
label-offline =offline

; Only applies if <icon-X> is used
icon-play =ÔÅã
icon-pause =ÔÅå
icon-stop =ÔÅç
icon-prev =ÔÅâ
icon-next =ÔÅê
icon-seekb =ÔÅä
icon-seekf =ÔÅé
icon-random =Ôàñ
icon-repeat =üîÅ
icon-repeatone =üîÇ
icon-consume =‚úÄ

; Used to display the state of random/repeat/repeatone
; Only applies if <icon-[random|repeat|repeatone]> is used
toggle-on-foreground =#ff
toggle-off-foreground =#55

; Only applies if <bar-progress> is used
bar-progress-width =45
bar-progress-indicator =|
bar-progress-fill =‚îÄ
bar-progress-empty =‚îÄ


[module/i3]
type =internal/i3
pin-workspaces =false
strip-wsnumbers =true
format =<label-state>
label-focused =%icon%
label-focused-foreground =${colors.bg}
label-focused-background = ${colors.c3}
label-focused-padding =1
label-unfocused =%icon%
label-unfocused-padding =1
label-unfocused-foreground =${colors.fg}
label-unfocused-background =${colors.bg}
label-visible =%icon%
label-visible-padding =1
label-visible-foreground =${colors.bg}
label-visible-background =${colors.fg}
label-separator =|
label-separator-padding =1
ws-icon-0 =1;Ôâ¨
ws-icon-1 =2;ÔÑ†
ws-icon-2 =3;Ôâ©
ws-icon-3 =4;ÔÅÑ
ws-icon-4 =5;ÔÑ∞

[module/xwindow]
type=internal/xwindow
label=%title:0:80:...%
label-foreground=${colors.winbg}
label-background=${colors.winfg}

[module/temp]
type =internal/temperature
interval =1
format =<ramp><label>
label =%temperature%
label-background =${colors.tempbg}
label-foreground =${colors.tempfg}
label-padding =1
format-warn =<ramp><label-warn>
label-warn =%temperature%
label-warn-foreground =${colors.tempfg}
label-warn-background =${colors.c1}
ramp-0 =Ôãã
ramp-1 =Ôãâ
ramp-2 =Ôãá
ramp-foreground =${colors.tempfg}

[module/date]
type=internal/date
interval=2
date=%a, %b %d
time=%I:%M %p
label=%date% %time%
format=<label>
format-padding=0
label-background=${colors.datbg}
label-foreground=${colors.datfg}
label-padding=1

[module/utcdate]
type=custom/script
exec=TZ=UTC date +"%a, %b %d %I:%M %p"
interval=2
format=<label>
label-background=${colors.datbg}
label-foreground=${colors.datfg}
label-padding=1

[module/pulse]
type=internal/pulseaudio
sink=alsa_output.usb-Schiit_Audio_Schiit_Modi_3-00.analog-stereo
format-volume=<label-volume> <ramp-volume>
format-muted=<label-muted>
label-volume=%percentage%
label-volume-foreground=${colors.volfg}
label-muted=muted
label-muted-foreground=${colors.volfg}
ramp-volume-0=ÔÄ¶
ramp-volume-1=ÔÄß
ramp-volume-2=ÔÄ®

[module/cpu]
type=internal/cpu
interval=0.5
format=<label>
label=Ôãõ %percentage%%
label-background=${colors.cpubg}
label-foreground=${colors.cpufg}

[module/memory]
type =internal/memory
interval =3
label-background=${colors.membg}
label-foreground=${colors.memfg}
format =<label>
label =Ôà≥ %gb_used%
label-padding =1

[module/network]
type=internal/network
interface=enp4s0
interval=3.0
format-connected=<label-connected>
label-connected=ÔÄí %local_ip%
label-connected-background=${colors.netbg}
label-connected-foreground=${colors.netfg}
label-connected-padding=1
format-disconnected=<label-disconnected>
label-disconnected-background=${colors.netfg}
label-disconnected-foreground=${colors.c1}
label-disconnected-padding=1
label-disconnected=ÔÄç

[module/filesystem]
type =internal/fs
mount-0 =/
mount-1 =/nfs/Media
interval =10
format-mounted =<label-mounted>
label-mounted =ÔáÄ %mountpoint%: %free%
label-mounted-foreground =${colors.fsfg}
label-mounted-background =${colors.fsbg}
label-unmounted =ÔáÄ %mountpoint%: ÔÄç

[module/padding]
type=custom/text
content=|
content-foreground=${colors.bg}
content-background=${colors.bg}
